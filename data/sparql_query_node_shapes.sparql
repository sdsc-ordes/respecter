PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX dct: <http://purl.org/dc/terms/>
PREFIX dcat: <https://www.w3.org/TR/vocab-dcat-2/#>
PREFIX sh: <http://www.w3.org/ns/shacl#>
SELECT ?concept ?description ?name ?type (GROUP_CONCAT(?properties; separator="\n") as ?Properties)
WHERE{
      {
            ?concept a sh:NodeShape .
        OPTIONAL {?concept sh:name ?name}
        OPTIONAL {?concept sh:description ?description}
        OPTIONAL {?concept sh:property/sh:path ?properties}
        
        }
}
    GROUP BY ?concept ?description ?name ?example ?type